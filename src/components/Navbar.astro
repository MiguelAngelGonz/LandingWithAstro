---
const links = [
  { label: 'Inicio', href: '/' },
  { label: 'Servicios', href: '/servicios' },
  { label: 'Nosotros', href: '/nosotros' },
];
---

<nav class="sticky top-0 z-50 w-full bg-zinc-900/80 backdrop-blur-md border-b border-zinc-700">
  <div class="container mx-auto px-6 py-4 flex justify-between items-center">
    
    <a href="/" class="text-2xl font-bold text-white hover:text-gray-200">
      Visionarios.<span class="text-green-500">Dev</span>
    </a>

    <div class="hidden md:flex items-center space-x-6">
      {links.map((link) => (
        <a href={link.href} class="text-gray-300 hover:text-white transition-colors">
          {link.label}
        </a>
      ))}
      <a 
        href="/contacto" 
        class="bg-green-600 text-white font-semibold py-2 px-4 rounded-lg text-sm hover:bg-green-700 transition-colors"
      >
        Agendar Servicio
      </a>
    </div>

    <button id="menu-toggle" class="md:hidden text-gray-300 hover:text-white">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
      </svg>
    </button>

  </div>

  <div id="menu-mobile" class="hidden md:hidden bg-zinc-800/95">
    <div class="flex flex-col p-4 space-y-3">
      {links.map((link) => (
        <a href={link.href} class="text-gray-300 hover:text-white text-lg">
          {link.label}
        </a>
      ))}
      <a 
        href="/contacto" 
        class="bg-green-600 text-white font-semibold py-2 px-4 rounded-lg text-center hover:bg-green-700 transition-colors"
      >
        Agendar Servicio
      </a>
    </div>
  </div>
</nav>

<script>
  // Busca el botón y el menú por sus IDs
  const menuToggle = document.getElementById('menu-toggle');
  const menuMobile = document.getElementById('menu-mobile');

  if (menuToggle && menuMobile) {
    menuToggle.addEventListener('click', () => {
      // Alterna (toggle) la clase 'hidden' en el menú móvil
      menuMobile.classList.toggle('hidden');
    });
  }
</script>