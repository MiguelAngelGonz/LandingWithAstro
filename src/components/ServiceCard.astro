---
interface Props {
  title: string;
  description: string;
  // icon?: string; (Lo dejamos comentado por ahora)
}

const { title, description } = Astro.props;
---

<div class="bg-zinc-800 p-6 rounded-lg shadow-2xl text-center hover:shadow-green-500/60 transition-shadow">
  <div class="w-12 h-12 bg-green-600 text-white rounded-full flex items-center justify-center">
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
  </div>
  
  <h3 class="mt-5 text-2xl font-bold text-white">{title}</h3>
  <p class="mt-2 text-gray-400">{description}</p>
</div>
